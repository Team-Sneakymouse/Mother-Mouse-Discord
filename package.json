{
	"scripts": {
		"start": "node --enable-source-maps dist/bot.js",
		"build": "tsc",
		"dev": "docker run --rm -v \"${PWD}:/app\" -w /app --network db -t node:16-alpine npm run watch",
		"watch": "concurrently -n TS,JS -c blue,yellow 'npm run watch-ts' 'npm run watch-js'",
		"watch-ts": "tsc --watch --preserveWatchOutput",
		"watch-js": "nodemon --watch ./dist --enable-source-maps dist/server.js"
	},
	"dependencies": {
		"axios": "^0.23.0",
		"discord.js": "^13.2.0",
		"dotenv": "^10.0.0",
		"form-data": "^4.0.0",
		"mime-types": "^2.1.33"
	},
	"devDependencies": {
		"@types/mime-types": "^2.1.1",
		"@types/node": "^16.11.4",
		"concurrently": "^6.3.0",
		"nodemon": "^2.0.14",
		"typescript": "^4.4.4"
	}
}
